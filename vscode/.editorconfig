# EditorConfig for VSCode settings
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{json,jsonc}]
indent_style = space
indent_size = 2
max_line_length = 100

[*.{md,markdown}]
trim_trailing_whitespace = false

[keybindings.json]
# Keep prettier-ignore comment at top
insert_final_newline = true
