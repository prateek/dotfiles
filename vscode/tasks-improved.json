{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Format JSON (Clojure-style)",
      "type": "shell",
      "command": "node ${workspaceFolder}/vscode/clojure-json-formatter.js ${file} > ${file}.formatted && mv ${file}.formatted ${file}",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": false,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "Pretty Print JSON",
      "type": "shell", 
      "command": "jq '.' ${file} > ${file}.pretty && mv ${file}.pretty ${file}",
      "problemMatcher": [],
      "presentation": {
        "echo": false,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "confluence-markup",
      "type": "shell",
      "command": "(md2jira '${file}' | code -) &",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": false,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    }
  ]
}