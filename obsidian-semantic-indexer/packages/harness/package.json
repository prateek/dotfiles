{
  "name": "@osi/harness",
  "version": "1.0.0",
  "description": "Test harness for Obsidian Semantic Indexer",
  "type": "module",
  "scripts": {
    "test": "vitest",
    "test:chaos": "vitest run --config vitest.chaos.config.ts",
