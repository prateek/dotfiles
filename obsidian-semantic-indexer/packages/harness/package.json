  "dependencies": {
    "@osi/core": "workspace:*"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@types/node": "^20.11.5",
    "fast-check": "^3.15.0",
    "playwright": "^1.40.1",
    "vitest": "^1.2.1"
  }
}