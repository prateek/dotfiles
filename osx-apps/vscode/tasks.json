{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "confluence-markup",
      "type": "shell",
      "command": "(md2jira '${file}' | code -) &",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": false,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "Format VSCode settings",
      "type": "shell",
      "command": "node ${workspaceFolder}/scripts/format-vscode-settings.mjs ${workspaceFolder}/osx-apps/vscode/settings.json",
      "problemMatcher": [],
      "presentation": {
        "reveal": "never",
        "panel": "shared"
      }
    }
  ]
}