// Place your key bindings in this file to overwrite the defaults
// prettier-ignore
[
  // ——— Global / Quick Open ———
  {
    "key": "cmd+n",
    "command": "workbench.action.quickOpen"
  },
  {
    "key": "cmd+p",
    "command": "workbench.action.quickOpen"
  },
  {
    "key": "shift+cmd+.",
    "command": "workbench.action.openGlobalKeybindings"
  },
  {
    "key": "ctrl+z",
    "command": "workbench.action.showAllSymbols"
  },
  // ——— Editor Navigation ———
  {
    "key": "ctrl+h",
    "command": "workbench.action.focusPreviousGroup"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.focusNextGroup"
  },
  {
    "key": "shift+cmd+[",
    "command": "workbench.action.previousEditor",
    "when": "editorFocus"
  },
  {
    "key": "shift+cmd+]",
    "command": "workbench.action.nextEditor",
    "when": "editorFocus"
  },
  {
    "key": "f1",
    "command": "editor.action.showHover",
    "when": "editorTextFocus"
  },
  // ——— Explorer ———
  {
    "key": "shift+cmd+e",
    "command": "workbench.view.explorer",
    "when": "viewContainer.workbench.view.explorer.enabled && !editorFocus"
  },
  {
    "key": "shift+cmd+e",
    "command": "workbench.files.action.showActiveFileInExplorer",
    "when": "viewContainer.workbench.view.explorer.enabled && editorFocus"
  },
  // ——— Terminal ———
  {
    "key": "cmd+t",
    "command": "workbench.action.terminal.new",
    "when": "terminalFocus"
  },
  {
    "key": "cmd+d",
    "command": "workbench.action.terminal.split",
    "when": "terminalFocus"
  },
  {
    "key": "shift+cmd+d",
    "command": "workbench.action.terminal.split",
    "when": "terminalFocus"
  },
  {
    "key": "shift+cmd+[",
    "command": "workbench.action.terminal.focusPrevious",
    "when": "terminalFocus"
  },
  {
    "key": "shift+cmd+]",
    "command": "workbench.action.terminal.focusNext",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+a",
    "command": "workbench.action.terminal.runSelectedText"
  },
  // ——— Navigation (Workbench) ———
  {
    "key": "ctrl+h",
    "command": "workbench.action.navigateLeft"
  },
  {
    "key": "ctrl+j",
    "command": "workbench.action.navigateDown"
  },
  {
    "key": "ctrl+k",
    "command": "workbench.action.navigateUp"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.navigateRight"
  },
  // ——— Formatting ———
  {
    "key": "ctrl+shift+f",
    "command": "editor.action.formatDocument",
    "when": "editorTextFocus && !editorReadonly"
  },
  // { "key": "alt+w", "command": "editor.action.toggleWordWrap" },
  // ——— Tasks / Build ———
  {
    "key": "shift+cmd+r",
    "command": "workbench.action.tasks.build"
  },
  // ——— References ———
  {
    "key": "f4",
    "command": "references-view.next",
    "when": "reference-list.hasResult && references-view.canNavigate"
  },
  // ——— Git / GitLens ———
  {
    "key": "cmd+r",
    "command": "gitlens.openFileOnRemote",
    "when": "editorTextFocus"
  },
  // ——— Cursor Composer / Chat ———
  {
    "key": "cmd+i",
    "command": "composerMode.agent"
  },
  {
    "key": "shift+cmd+enter",
    "command": "workbench.action.toggleZenMode",
    "when": "editorFocus || notebookEditorFocused"
  },
  {
    "key": "shift+cmd+enter",
    "command": "workbench.action.toggleMaximizedPanel",
    "when": "terminalFocus || terminalEditorFocus"
  },
  {
    "key": "shift+cmd+enter",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "!editorFocus && !terminalFocus && !notebookEditorFocused && !terminalEditorFocus"
  },
  {
    "key": "shift+cmd+]",
    "command": "composer.selectNextComposer",
    "when": "agentsPaneFocused && cursor.agentIdeUnification.enabled || composerFocused && cursor.agentIdeUnification.enabled"
  },
  // ——— Unbind conflicting defaults ———
  {
    "key": "shift+cmd+enter",
    "command": "-editor.action.insertLineBefore",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "shift+cmd+[",
    "command": "composer.selectPreviousComposer",
    "when": "agentsPaneFocused && cursor.agentIdeUnification.enabled || composerFocused && cursor.agentIdeUnification.enabled"
  },
  {
    "key": "ctrl+shift+c",
    "command": "workbench.panel.chatSidebar.copilot"
  },
  // ——— Language: Zig ———
  {
    "key": "ctrl+e",
    "command": "zig-language-extras.runSingleTest",
    "when": "editorLangId=='zig' && editorTextFocus"
  },
  {
    "key": "ctrl+f",
    "command": "zig-language-extras.runFileTests",
    "when": "editorLangId=='zig' && editorTextFocus"
  },
  {
    "key": "f5",
    "command": "workbench.action.tasks.runTask",
    "args": "runZigFile",
    "when": "editorLangId=='zig' && editorFocus"
  },
  // ——— Language: Go ———
  {
    "key": "f5",
    "command": "workbench.action.debug.restart",
    "when": "editorLangId=='go' && inDebugMode"
  },
  {
    "key": "ctrl+e",
    "command": "go.test.cursor",
    "when": "editorLangId=='go' && editorTextFocus"
  },
  {
    "key": "ctrl+f",
    "command": "go.test.file",
    "when": "editorLangId=='go' && editorTextFocus"
  },
  {
    "key": "ctrl+s",
    "command": "go.test.previous",
    "when": "editorLangId=='go' && editorTextFocus"
  },
  {
    "key": "ctrl+t",
    "command": "go.test.package",
    "when": "editorLangId=='go'"
  },
  // ——— Unbound defaults ———
  {
    "key": "shift+cmd+f5",
    "command": "-workbench.action.debug.restart",
    "when": "editorLangId=='go' && inDebugMode"
  },
  {
    "key": "shift+cmd+o",
    "command": "-workbench.action.gotoSymbol"
  },
  {
    "key": "cmd+t",
    "command": "-workbench.action.showAllSymbols"
  },
  {
    "key": "shift+alt+f",
    "command": "-editor.action.formatDocument",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "cmd+2",
    "command": "-workbench.action.focusSecondEditorGroup"
  },
  {
    "key": "cmd+\\",
    "command": "-workbench.action.splitEditor"
  },
  {
    "key": "cmd+2",
    "command": "workbench.action.splitEditor"
  },
  {
    "key": "shift+cmd+p",
    "command": "-workbench.action.showCommands"
  },
  {
    "key": "alt+f8",
    "command": "-editor.action.marker.next",
    "when": "editorFocus"
  },
  {
    "key": "shift+alt+f8",
    "command": "-editor.action.marker.prev",
    "when": "editorFocus"
  },
  {
    "key": "shift+cmd+u",
    "command": "-workbench.action.output.toggleOutput",
    "when": "workbench.panel.output.active"
  },
  {
    "key": "shift+cmd+b",
    "command": "-workbench.action.tasks.build",
    "when": "taskCommandsRegistered"
  },
  {
    "key": "shift+cmd+r",
    "command": "-rerunSearchEditorSearch",
    "when": "inSearchEditor"
  },
  {
    "key": "alt+cmd+t",
    "command": "-workbench.action.closeOtherEditors"
  },
  {
    "key": "cmd+k cmd+o",
    "command": "workbench.action.closeEditorsInOtherGroups"
  },
  {
    "key": "shift+alt+down",
    "command": "-editor.action.copyLinesDownAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "shift+alt+down",
    "command": "-notebook.cell.copyDown",
    "when": "notebookEditorFocused && !inputFocus"
  },
  {
    "key": "shift+alt+up",
    "command": "-notebook.cell.copyUp",
    "when": "notebookEditorFocused && !inputFocus"
  },
  {
    "key": "shift+alt+up",
    "command": "-editor.action.copyLinesUpAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "shift+cmd+i",
    "command": "-chat.action.askQuickQuestion",
    "when": "config.chat.experimental.quickQuestion.enable && hasChatProvider"
  },
  {
    "key": "ctrl+cmd+i",
    "command": "-workbench.panel.chatSidebar.copilot"
  },
  {
    "key": "shift+cmd+]",
    "command": "-workbench.action.nextEditor"
  },
  {
    "key": "shift+cmd+[",
    "command": "-workbench.action.previousEditor"
  },
  {
    "key": "cmd+f",
    "command": "-list.find",
    "when": "listFocus && listSupportsFind"
  },
  {
    "key": "shift+cmd+e",
    "command": "-workbench.view.explorer",
    "when": "viewContainer.workbench.view.explorer.enabled"
  },
  {
    "key": "f4",
    "command": "-references-view.next",
    "when": "reference-list.hasResult && references-view.canNavigate"
  }
]
